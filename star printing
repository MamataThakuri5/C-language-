#include<stdio.h>
int main(){
    int b,s,i,j,k,c=0;
    printf("enter the blocks:");
    scanf("%d",&b);
    printf("enter the stars:");
    scanf("%d",&s);
    for(i=0;i<b;i++){
        c=0;
        for(j=0;j<b-i;j++){
            for(k=0;k<s;k++){
                printf("*");
                c=c+1;
            }
            printf("\n");
        }
    printf("\n%d",c);
    printf("-----------------\n"); 
    }
return 0;
}
